{
  "name": "juno",
  "displayName": "Juno",
  "description": "A junior code assistant at your fingertips",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "juno.openPrompt",
        "title": "Open Prompt",
        "category": "Juno"
      },
      {
        "command": "juno.clearPrompt",
        "category": "Juno",
        "title": "Clear Prompt",
        "icon": "$(clear-all)"
      },
      {
        "command": "juno.suggestImprovements",
        "category": "Juno",
        "title": "Suggest Improvements"
      }
    ],
    "configuration": {
      "title": "Juno",
      "properties": {
        "juno.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAPI api key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/marked": "^5.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "highlight.js": "^11.8.0",
    "marked": "^5.1.2",
    "marked-highlight": "^2.0.1",
    "openai": "^3.3.0"
  }
}
