{
  "name": "juno",
  "displayName": "Juno",
  "description": "A junior code assistant at your fingertips",
  "version": "0.0.1",
  "publisher": "emilkje",
  "repository": {
    "url": "https://github.com/emilkje/juno"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "juno.openPrompt",
        "title": "Open Prompt",
        "category": "Juno"
      },
      {
        "command": "juno.suggestImprovements",
        "category": "Juno",
        "title": "Suggest Improvements"
      },
      {
        "command": "juno.selectModel",
        "category": "Juno",
        "title": "Select model"
      },
      {
        "command": "juno.createCode",
        "category": "Juno",
        "title": "Create Code"
      },
      {
        "command": "juno.indexRepo",
        "category": "Juno",
        "title": "Index Repository"
      },
      {
        "command": "juno.queryRepo",
        "category": "Juno",
        "title": "Query Repository"
      },
      {
        "command": "juno.deleteRepoIndex",
        "category": "Juno",
        "title": "Delete Repository Vector Indicies"
      }
    ],
    "configuration": {
      "title": "Juno",
      "properties": {
        "juno.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        }
      }
    }
  },
  "scripts": {
    "prepare": "npx ts-patch install -s",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tspc -p ./",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "watch": "tspc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/marked": "^5.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.18.18",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-patch": "^3.0.2",
    "typescript": "^5.1.3",
    "typescript-transform-paths": "^3.4.6",
    "undefined": "^0.1.0"
  },
  "dependencies": {
    "highlight.js": "^11.8.0",
    "marked": "^5.1.2",
    "marked-highlight": "^2.0.1",
    "openai": "^3.3.0",
    "vectra": "^0.1.2"
  }
}
